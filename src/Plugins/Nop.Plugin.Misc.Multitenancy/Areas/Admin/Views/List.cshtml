@model TenantSearchModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header clearfix">
    <h1 class="float-left">
        Tenants
    </h1>
    <div class="float-right">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-square"></i>
            Add New
        </a>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default">
                    <div class="card-body">
                        @await Html.PartialAsync("~/Plugins/Nop.Plugin.Api/Views/Shared/Table.cshtml", new DataTablesModel
                        {
                            Name = "organizations-grid",
                            UrlRead = new DataUrl("ListData", "Organization", null),
                            Length = Model.PageSize,
                            LengthMenu = Model.AvailablePageSizes,
                            ColumnCollection = new List<ColumnProperty>
                            {
                                new ColumnProperty(nameof(TenantModel.Name))
                                {
                                    Title = "Name"
                                },
                                new ColumnProperty(nameof(TenantModel.Email))
                                {
                                    Title = "Email"
                                },
                                new ColumnProperty(nameof(TenantModel.Id))
                                {
                                    Title = "Edit",
                                    Width = "100",
                                    ClassName = "button",
                                    Render = new RenderButtonEdit(new DataUrl("Edit", "Organization", null))
                                }
                            }
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
